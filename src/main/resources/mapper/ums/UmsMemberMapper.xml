<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mall.mapper.ums.UmsMemberMapper">

    <insert id="insertBatch" parameterType="list" useGeneratedKeys="true" keyProperty="id">
        insert into ums_member(name, age, email, sex)
        values
        <foreach item="item" collection="list" separator=",">
            (#{item.name}, #{item.age}, #{item.email}, #{item.sex})
        </foreach>
    </insert>

    <update id="updateBatch" parameterType="list">
        update ums_member set name =
        (CASE id
        <foreach collection="list" item="item" index="index"
                 separator=" ">
            when #{item.id} then #{item.name}
        </foreach>
        END),
        age =
        (CASE id
        <foreach collection="list" item="item" index="index"
                 separator=" ">
            when #{item.id} then #{item.age}
        </foreach>
        END),
        email =
        (CASE id
        <foreach collection="list" item="item" index="index"
                 separator=" ">
            when #{item.id} then #{item.email}
        </foreach>
        END),
        sex =
        (CASE id
        <foreach collection="list" item="item" index="index"
                 separator=" ">
            when #{item.id} then #{item.sex}
        </foreach>
        END)
        where id in
        <foreach collection="list" index="index" item="item"
                 separator="," open="(" close=")">
            #{item.id,jdbcType=BIGINT}
        </foreach>
    </update>

</mapper>