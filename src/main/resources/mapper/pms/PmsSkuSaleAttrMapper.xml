<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
        PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
        "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.mall.mapper.pms.PmsSkuSaleAttrMapper">

    <select id="selectGroupList" parameterType="long" resultType="com.mall.dto.pms.SelectSkuSaleAttrDTO">
        select attr_name, attr_value, group_concat(sku_id) as sku_ids from pms_sku_sale_attr
        where spu_id = #{spuId}
        group by attr_name,attr_value
    </select>

</mapper>